foreach (Player in Players) {
    declare Boolean LastSpawnStatus for Player = False;
    declare status = "False";
    if (Player.IsSpawned) {
        status = "True";
    }       
    log (Player.Login ^ ": " ^ status);

    if (Player == InputPlayer && Player.IsSpawned != LastSpawnStatus) {
        LastSpawnStatus = Player.IsSpawned;
        log ("status changed"); 
        if (Player.IsSpawned == True) {           
            TriggerPageAction(respawnAction);
        }
    }
    
}
