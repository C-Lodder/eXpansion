
if( (Now - eXp_lastNbPlayerUpdate) >= 1000 ){
    declare nbPlayer = 0;

    foreach (Player in Players) {
        if(Player.Login != CurrentServerLogin){
            if(!Player.RequestsSpectate){
                nbPlayer += 1;
            }
        }
    }
    playerLabel.SetText("" ^ nbPlayer ^ "/" ^ maxPlayers);

    eXp_lastNbPlayerUpdate = Now;
}